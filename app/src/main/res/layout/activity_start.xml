<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sport_family"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Находите интересные события, знакомьтесь с новыми людьми и занимайтесь любимыми делами – всё это в нашем приложении!"
        android:textColor="@color/secondary_text"
        style="@style/TextLarge"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnGoToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BtnStandart"
        android:text="Войти"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnGoToRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BtnStandartLight"
        android:text="Создать аккаунт"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"/>

</LinearLayout>